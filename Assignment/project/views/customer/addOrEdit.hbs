<h3>{{viewTitle}}</h3>

<form action="/customer" method="POST" autocomplete="off">
<input type="hidden" name="_id" value="{{customer._id}}">
<div class="form-group">
<label>ID_NO</label>
<input type="text" class="form-control" name="no" placeholder="Id card Number" value="{{customer.no}}">
<div class="text-danger">
{{customer.noError}}</div>
</div>
<div class="form-group">
<label>Name</label>
<input type="text" class="form-control" name="fullName" placeholder="Full Name" value="{{customer.fullName}}">
<div class="text-danger">
{{customer.fullNameError}}</div>
</div>
<div class="form-group ">
<label>Email</label>
<input type="text" class="form-control" name="email" placeholder="Email" value="{{customer.email}}">
<div class="text-danger">
{{customer.emailError}}</div>
<div class="form-group">
<label>Mobile</label>
<input type="text" class="form-control" name="mobile" placeholder="Mobile" value="{{customer.mobile}}">
</div>
<div class="form-row">
<div class="form-group col-md-6">
<label>District</label>
<input type="text" class="form-control" name="city" placeholder="District" value="{{customer.city}}">
</div>
<div class="form-group col-m-6">
<label>State</label>
<input type="text" class="form-control" name="state" placeholder="State" value="{{customer.state}}">
</div>
</div>
<div class="form-group">
<label>Department</label>
<input type="text" class="form-control" name="department" placeholder="Department" value="{{customer.department}}">
</div>
<div class="form-group">
<label>Salary</label>
<input type="text" class="form-control" name="salary" placeholder="Salary:per/month" value="{{customer.salary}}">
</div>
<div class="form-group">
<button type="submit" class="btn btn-info"><i class="fa fa-database"></i> Submit</button>
<a class="btn btn-secondary" href="/customer/list"><i class="fa fa-list-alt"></i> View All</a>
</div>
</form>